# Application
NODE_ENV=development
PORT=3001
APP_URL=http://localhost:3001
FRONTEND_URL=http://localhost:3000

# Database
DATABASE_URL="file:./dev.db"

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=30d

# OTP (pour auth par téléphone)
OTP_EXPIRES_IN=300
OTP_LENGTH=6

# SMS Provider (exemple: Twilio, AfricasTalking, etc.)
SMS_PROVIDER=twilio
SMS_API_KEY=your_sms_api_key
SMS_API_SECRET=your_sms_api_secret
SMS_SENDER_ID=AliceBot

# Web Push (VAPID) - DEPRECATED, utiliser Firebase FCM à la place
VAPID_PUBLIC_KEY=your_vapid_public_key
VAPID_PRIVATE_KEY=your_vapid_private_key
VAPID_SUBJECT=mailto:admin@alicebot.com

# Firebase Cloud Messaging (FCM)
FIREBASE_PROJECT_ID=e-recharge-b75ee
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@e-recharge-b75ee.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour_Private_Key_Here\n-----END PRIVATE KEY-----\n"

# Email SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_NAME=AliceBot
SMTP_FROM_EMAIL=noreply@alicebot.com

# Admin
ADMIN_EMAILS=admin@alicebot.com

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_DIR=./uploads

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100
